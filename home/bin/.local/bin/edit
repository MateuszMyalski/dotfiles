#!/usr/bin/env bash
if [ $# -eq 0 ]; then
    echo "Usage: $(basename $0) [FILE]"
    exit 1
fi

if command -v geddit &>/dev/null; then
    geddit "$1"
elif command -v gnome-text-editor &>/dev/null; then
    gnome-text-editor "$1"
elif command -v nano &>/dev/null; then
    nano "$1"
elif command -v nano &>/dev/null; then
    nano "$1"
else
    echo "Do you really want to use vi?"
    exit 1
fi